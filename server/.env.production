# Production Environment Configuration for Prime SMS API
NODE_ENV=production
PORT=5050

# Database Configuration (hardcoded for VPS)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=PrimeSMS_W
DB_USER=postgres
DB_PASSWORD=

# Session Secret
SESSION_SECRET=prime-sms-production-secret-key-2024-secure-session-management

# CORS Origins for Production
CORS_ORIGINS=https://primesms.app,https://www.primesms.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info

# Request Limits
MAX_JSON_SIZE=100kb

# Proxy Settings
TRUST_PROXY=1